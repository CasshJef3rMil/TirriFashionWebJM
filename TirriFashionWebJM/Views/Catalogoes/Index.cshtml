@model IEnumerable<TirriFashionWebJM.Models.Catalogo>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1>Lista de Catalogos</h1>
</div>


<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AñoFabricacion)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.IdUsuarioNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCategoriaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @{
                        string urlBase64 = "";
                        if (item.Imagen != null && item.Imagen.Length > 0)
                        {
                            string base64String = Convert.ToBase64String(item.Imagen);
                            urlBase64 = "data:image/jpeg;base64," + base64String;
                        }
                    }
                    <img src="@urlBase64" width="50px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AñoFabricacion)
                </td>
                @*   <td>
            @Html.DisplayFor(modelItem => item.IdCategoriaNavigation.Id)
            </td> *@

                <td>
                    @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCategoriaNavigation.Nombre)
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a>

                    @if (User.IsInRole("Administrador"))
                    {
                        <span> |</span>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>

                        <span> |</span>
                        <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>

