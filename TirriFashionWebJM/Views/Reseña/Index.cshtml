@model IEnumerable<TirriFashionWebJM.Models.Reseña>

@{
    ViewData["Title"] = "Listado de reseñas";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nueva reseña</a>
</p>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Comentario</th>
            <th>Calificación</th>
            <th>Categoría</th>
            <th>Usuario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Comentario)</td>
                <td>@Html.DisplayFor(modelItem => item.Calificacion)</td>
                <td>@Html.DisplayFor(modelItem => item.IdCatalogoNavigation.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Nombre)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
